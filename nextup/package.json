{
  "name": "nextup-pickleball",
  "version": "0.1.0",
  "description": "Next-Up Pickleball League Management Platform",
  "private": true,
  "workspaces": [
    "client",
    "server"
  ],
  "scripts": {
    "dev": "concurrently -n \"CLIENT,SERVER\" -c \"cyan,green\" \"npm run dev:client\" \"npm run dev:server\"",
    "dev:client": "cd client && npm run dev",
    "dev:server": "cd server && npm run dev",
    "build": "npm run build:client && npm run build:server",
    "build:client": "cd client && npm run build",
    "build:server": "cd server && npm run build",
    "start": "npm run start:server",
    "start:server": "cd server && npm run start:prod",
    "preview": "cd client && npm run preview",
    "test": "npm run test:client && npm run test:server",
    "test:client": "cd client && npm test",
    "test:server": "cd server && npm test",
    "test:e2e": "cd server && npm run test:e2e",
    "lint": "npm run lint:client && npm run lint:server",
    "lint:client": "cd client && npm run lint",
    "lint:server": "cd server && npm run lint",
    "lint:fix": "npm run lint:fix:client && npm run lint:fix:server",
    "lint:fix:client": "cd client && npm run lint:fix",
    "lint:fix:server": "cd server && npm run lint:fix",
    "type-check": "npm run type-check:client && npm run type-check:server",
    "type-check:client": "cd client && npm run type-check",
    "type-check:server": "cd server && npm run type-check",
    "format": "npm run format:client && npm run format:server",
    "format:client": "cd client && npm run format",
    "format:server": "cd server && npm run format",
    "format:check": "npm run format:check:client && npm run format:check:server",
    "format:check:client": "cd client && npm run format:check",
    "format:check:server": "cd server && npm run format:check",
    "db:generate": "cd server && npm run db:generate",
    "db:migrate": "cd server && npm run db:migrate",
    "db:migrate:deploy": "cd server && npm run db:migrate:deploy",
    "db:push": "cd server && npm run db:push",
    "db:seed": "cd server && npm run db:seed",
    "db:reset": "cd server && npm run db:reset",
    "db:studio": "cd server && npm run db:studio",
    "docker:up": "docker-compose up -d",
    "docker:down": "docker-compose down",
    "docker:logs": "docker-compose logs -f",
    "docker:reset": "docker-compose down -v && docker-compose up -d",
    "setup": "npm run setup:deps && npm run setup:env && npm run setup:db",
    "setup:deps": "npm install && cd client && npm install && cd ../server && npm install",
    "setup:env": "bash scripts/setup.sh",
    "setup:db": "npm run docker:up && sleep 5 && npm run db:migrate && npm run db:seed",
    "clean": "npm run clean:deps && npm run clean:build",
    "clean:deps": "rm -rf node_modules client/node_modules server/node_modules",
    "clean:build": "rm -rf client/dist server/dist",
    "deploy:staging": "npm run build && npm run deploy:client:staging && npm run deploy:server:staging",
    "deploy:production": "npm run build && npm run deploy:client:production && npm run deploy:server:production",
    "deploy:client:staging": "echo 'Deploy client to staging S3/CloudFront'",
    "deploy:server:staging": "echo 'Deploy server to staging ECS/EC2'",
    "deploy:client:production": "echo 'Deploy client to production S3/CloudFront'",
    "deploy:server:production": "echo 'Deploy server to production ECS/EC2'",
    "analyze": "cd client && npm run analyze",
    "check": "npm run type-check && npm run lint && npm run format:check && npm test"
  },
  "devDependencies": {
    "concurrently": "^8.2.2",
    "cross-env": "^7.0.3",
    "dotenv-cli": "^7.3.0",
    "husky": "^8.0.3",
    "lint-staged": "^15.2.0",
    "npm-run-all": "^4.1.5"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "pre-push": "npm run check"
    }
  },
  "lint-staged": {
    "client/src/**/*.{ts,tsx}": [
      "cd client && npm run lint:fix",
      "cd client && npm run format"
    ],
    "server/src/**/*.ts": [
      "cd server && npm run lint:fix",
      "cd server && npm run format"
    ]
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/yourusername/nextup-pickleball.git"
  },
  "keywords": [
    "pickleball",
    "sports",
    "league",
    "management",
    "react",
    "express",
    "typescript"
  ],
  "author": "Next-Up Team",
  "license": "MIT"
}