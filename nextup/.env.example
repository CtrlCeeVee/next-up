# ===================================
# Database Configuration
# ===================================
DATABASE_URL="postgresql://nextup_user:nextup_password@localhost:5432/nextup"
REDIS_URL="redis://localhost:6379"

# ===================================
# Server Configuration
# ===================================
NODE_ENV="development"
PORT=5000
SERVER_URL="http://localhost:5000"

# ===================================
# Authentication & Security
# ===================================
JWT_SECRET="your-super-secret-jwt-key-change-this-in-production"
JWT_REFRESH_SECRET="your-super-secret-refresh-key-change-this-in-production"
JWT_EXPIRE="15m"
JWT_REFRESH_EXPIRE="7d"
COOKIE_SECRET="your-cookie-secret-change-this-in-production"

# ===================================
# Client Configuration
# ===================================
VITE_API_URL="http://localhost:5000/api"
VITE_APP_URL="http://localhost:5173"
VITE_ENVIRONMENT="development"

# ===================================
# Email Configuration (SendGrid/SMTP)
# ===================================
EMAIL_FROM="noreply@nextup.app"
EMAIL_FROM_NAME="Next-Up Pickleball"

# SendGrid
SENDGRID_API_KEY=""

# OR SMTP
SMTP_HOST="smtp.gmail.com"
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=""
SMTP_PASSWORD=""

# ===================================
# Real-time Configuration (Pusher)
# ===================================
PUSHER_APP_ID=""
PUSHER_KEY=""
PUSHER_SECRET=""
PUSHER_CLUSTER="us2"

# Client-side Pusher
VITE_PUSHER_KEY=""
VITE_PUSHER_CLUSTER="us2"

# ===================================
# AWS Configuration (Production)
# ===================================
AWS_REGION="us-east-1"
AWS_ACCESS_KEY_ID=""
AWS_SECRET_ACCESS_KEY=""
S3_BUCKET_NAME="nextup-assets"
S3_BUCKET_REGION="us-east-1"
CLOUDFRONT_DISTRIBUTION_ID=""

# ===================================
# File Upload Configuration
# ===================================
MAX_FILE_SIZE="5242880" # 5MB in bytes
ALLOWED_FILE_TYPES="image/jpeg,image/png,image/gif,image/webp"

# ===================================
# Rate Limiting
# ===================================
RATE_LIMIT_WINDOW_MS="900000" # 15 minutes
RATE_LIMIT_MAX_REQUESTS="100"

# ===================================
# Session Configuration
# ===================================
SESSION_SECRET="your-session-secret-change-this-in-production"
SESSION_MAX_AGE="86400000" # 24 hours in milliseconds

# ===================================
# CORS Configuration
# ===================================
CORS_ORIGIN="http://localhost:5173"
CORS_CREDENTIALS="true"

# ===================================
# Logging
# ===================================
LOG_LEVEL="debug" # error, warn, info, debug
LOG_FORMAT="pretty" # json or pretty

# ===================================
# External Services
# ===================================
# Google OAuth (optional)
GOOGLE_CLIENT_ID=""
GOOGLE_CLIENT_SECRET=""

# Facebook OAuth (optional)
FACEBOOK_APP_ID=""
FACEBOOK_APP_SECRET=""

# ===================================
# Feature Flags
# ===================================
ENABLE_SIGNUP="true"
ENABLE_EMAIL_VERIFICATION="true"
ENABLE_PASSWORD_RESET="true"
ENABLE_SOCIAL_AUTH="false"
ENABLE_REAL_TIME="true"
ENABLE_NOTIFICATIONS="true"

# ===================================
# Development Tools
# ===================================
# pgAdmin
PGADMIN_DEFAULT_EMAIL="admin@nextup.local"
PGADMIN_DEFAULT_PASSWORD="admin"

# MailHog (dev email server)
MAILHOG_HOST="localhost"
MAILHOG_PORT="1025"

# ===================================
# Testing
# ===================================
TEST_DATABASE_URL="postgresql://test_user:test_password@localhost:5432/nextup_test"
TEST_JWT_SECRET="test-jwt-secret"
TEST_API_KEY="test-api-key-for-e2e"