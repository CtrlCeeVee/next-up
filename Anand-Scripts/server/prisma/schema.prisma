// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// ===================================
// User & Authentication Models
// ===================================

model User {
  id               String    @id @default(uuid())
  email            String    @unique
  password         String
  name             String
  avatar           String?
  role             UserRole  @default(PLAYER)
  isVerified       Boolean   @default(false)
  preferredPartner String?
  createdAt        DateTime  @default(now())
  updatedAt        DateTime  @updatedAt
  lastLoginAt      DateTime?

  // Relations
  leagueMemberships LeagueMember[]
  adminLeagues      League[]       @relation("LeagueAdmin")
  playerStats       PlayerStats[]
  tokens            AuthToken[]
  notifications     Notification[]

  @@index([email])
  @@map("users")
}

model AuthToken {
  id        String    @id @default(uuid())
  token     String    @unique
  type      TokenType
  expiresAt DateTime
  userId    String
  user      User      @relation(fields: [userId], references: [id], onDelete: Cascade)
  createdAt DateTime  @default(now())

  @@index([token])
  @@index([userId])
  @@map("auth_tokens")
}

// ===================================
// League Models
// ===================================

model League {
  id          String   @id @default(uuid())
  name        String
  description String?
  location    String
  schedule    String
  adminId     String
  admin       User     @relation("LeagueAdmin", fields: [adminId], references: [id])
  settings    Json     @default("{}")
  isActive    Boolean  @default(true)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  // Relations
  members      LeagueMember[]
  leagueNights LeagueNight[]
  playerStats  PlayerStats[]

  @@index([adminId])
  @@map("leagues")
}

model LeagueMember {
  id       String           @id @default(uuid())
  leagueId String
  league   League           @relation(fields: [leagueId], references: [id], onDelete: Cascade)
  userId   String
  user     User             @relation(fields: [userId], references: [id], onDelete: Cascade)
  role     LeagueMemberRole @default(PLAYER)
  joinedAt DateTime         @default(now())

  @@unique([leagueId, userId])
  @@index([leagueId])
  @@index([userId])
  @@map("league_members")
}

model LeagueNight {
  id       String            @id @default(uuid())
  leagueId String
  league   League            @relation(fields: [leagueId], references: [id], onDelete: Cascade)
  date     DateTime
  status   LeagueNightStatus @default(SCHEDULED)
  courts   Json              @default("[]") // Array of court configurations
  attendees String[]         @default([])   // Array of user IDs
  createdAt DateTime         @default(now())
  updatedAt DateTime         @updatedAt

  // Relations
  matches Match[]

  @@index([leagueId])
  @@index([date])
  @@map("league_nights")
}

// ===================================
// Match Models
// ===================================

model Match {
  id            String      @id @default(uuid())
  leagueNightId String
  leagueNight   LeagueNight @relation(fields: [leagueNightId], references: [id], onDelete: Cascade)
  courtNumber   Int
  status        MatchStatus @default(QUEUED)
  team1Players  String[]    // Array of user IDs
  team2Players  String[]    // Array of user IDs
  startTime     DateTime?
  endTime       DateTime?
  createdAt     DateTime    @default(now())
  updatedAt     DateTime    @updatedAt

  // Relations
  scores MatchScore[]

  @@index([leagueNightId])
  @@index([status])
  @@map("matches")
}

model MatchScore {
  id          String   @id @default(uuid())
  matchId     String
  match       Match    @relation(fields: [matchId], references: [id], onDelete: Cascade)
  gameNumber  Int
  team1Score  Int
  team2Score  Int
  confirmed   Boolean  @default(false)
  confirmedBy String[] @default([]) // Array of user IDs who confirmed
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  @@unique([matchId, gameNumber])
  @@index([matchId])
  @@map("match_scores")
}

// ===================================
// Statistics Models
// ===================================

model PlayerStats {
  id            String   @id @default(uuid())
  leagueId      String
  league        League   @relation(fields: [leagueId], references: [id], onDelete: Cascade)
  userId        String
  user          User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  rating        Float    @default(1200) // ELO rating
  wins          Int      @default(0)
  losses        Int      @default(0)
  gamesPlayed   Int      @default(0)
  pointsFor     Int      @default(0)
  pointsAgainst Int      @default(0)
  streak        Int      @default(0) // Current win/loss streak
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt

  @@unique([leagueId, userId])
  @@index([leagueId])
  @@index([userId])
  @@index([rating])
  @@map("player_stats")
}

// ===================================
// Notification Model
// ===================================

model Notification {
  id        String           @id @default(uuid())
  userId    String
  user      User             @relation(fields: [userId], references: [id], onDelete: Cascade)
  type      NotificationType
  title     String
  message   String
  data      Json?
  read      Boolean          @default(false)
  createdAt DateTime         @default(now())

  @@index([userId])
  @@index([read])
  @@map("notifications")
}

// ===================================
// Enums
// ===================================

enum UserRole {
  PLAYER
  ADMIN
  SUPER_ADMIN
}

enum TokenType {
  REFRESH
  PASSWORD_RESET
  EMAIL_VERIFICATION
}

enum LeagueMemberRole {
  PLAYER
  ORGANIZER
  ADMIN
}

enum LeagueNightStatus {
  SCHEDULED
  IN_PROGRESS
  COMPLETED
  CANCELLED
}

enum MatchStatus {
  QUEUED
  IN_PROGRESS
  COMPLETED
  CANCELLED
}

enum NotificationType {
  MATCH_ASSIGNED
  MATCH_STARTED
  MATCH_COMPLETED
  LEAGUE_UPDATE
  SYSTEM
}